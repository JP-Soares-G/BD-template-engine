<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Awesome Store</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kumbh+Sans:wght@300;400;500;700;900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="./styles.css">
    <link rel="stylesheet" href="./global.css">
</head>

<body>
    <header class="header">
        <a class="logo" href="/">
            <h1>Awesome Store</h1>
        </a>
    </header>

    <section class="products">
        <% products.forEach(product=> {%>
            <a href="/<%= product.id %>">
                <div class="product--card">
                    <img class="pseudo-image" src="<%= product.image %>" />
                    <div class="card__info">
                        <p><%= product.title %></p>
                        <p class="id">Id: <%= product.id %></p>
                        <p class="category">Categoria: <%= product.category %></p>
                    </div>
                </div>
            </a>
            <%});%>
    </section>


</body>

</html>